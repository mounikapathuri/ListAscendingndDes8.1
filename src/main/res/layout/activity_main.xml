<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mounikapathuri.listascnddec81.MainActivity">
    <Button
        android:onClick="Ascending"
        android:id="@+id/btnAscending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ascending"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <Button
        android:onClick="Descending"
        android:id="@+id/btnDescending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descending"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnAscending"
        android:layout_toEndOf="@+id/btnAscending"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp" />

    <ListView
        android:id="@+id/Months"
        android:layout_below="@+id/btnAscending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
